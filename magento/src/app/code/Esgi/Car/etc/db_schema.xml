<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="esgi_car_brand" resource="default" engine="innodb" comment="Brand Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity Id"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Brand Title"/>
        <column xsi:type="mediumtext" name="content" nullable="true" comment="Brand Content"/>
        <column xsi:type="smallint" name="is_active" padding="6" unsigned="false" nullable="false" identity="false"
                default="1" comment="Is Brand Active"/>
        <column xsi:type="varchar" name="products" nullable="true" length="255" comment="Products Title"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="ESGI_BRAND_TITLE_CONTENT" indexType="fulltext">
            <column name="title"/>
            <column name="content"/>
        </index>
    </table>

    <table name="esgi_car_product" resource="default" engine="innodb" comment="Brand Product Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity Id"/>
        <column xsi:type="int" name="brand_id" padding="10" unsigned="true" nullable="false" comment="Brand Id"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" comment="Product ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="ESGI_CAR_BRAND_PRODUCT_ID_ESGI_CAR_BRAND_ENTITY_ID"
                    table="esgi_car_product" column="brand_id" referenceTable="esgi_car_brand"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="ESGI_CAR_BRAND_PRODUCT_ID_CATALOG_PRODUCT_ENTITY_ENTITY_ID"
                    table="esgi_car_product" column="product_id" referenceTable="catalog_product_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>
